{
  "name": "amplify-app-template",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app/web",
    "app/mobile",
    "app/domain",
    "app/shared"
  ],
  "scripts": {
    "web:dev": "npm run dev --workspace=web",
    "web:build": "npm run build --workspace=web",
    "mobile:start": "npm run start --workspace=mobile",
    "mobile:android": "npm run android --workspace=mobile",
    "mobile:ios": "npm run ios --workspace=mobile",
    "mobile:web": "npm run web --workspace=mobile"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.20.0",
    "@aws-amplify/backend-cli": "^1.8.2",
    "aws-cdk-lib": "^2.234.1",
    "constructs": "^10.4.5",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "aws-amplify": "^6.16.0"
  }
}
